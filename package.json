{
  "name": "hexo-blockquote2note",
  "version": "1.0.0",
  "description": "A Hexo plugin that renders blockquotes to note tag in NexT theme.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "eslint": "eslint .",
    "test": "cross-env NODE_OPTIONS='--import tsx' mocha 'test/**/*.test.ts'",
    "test:coverage": "nyc npm test"
  },
  "directories": {
    "lib": "./lib"
  },
  "files": [
    "dist/**"
  ],
  "types": "./dist/index.d.ts",
  "repository": "BlockLune/hexo-blockquote2note",
  "homepage": "https://github.com/BlockLune/hexo-blockquote2note",
  "keywords": [
    "hexo",
    "next-theme"
  ],
  "author": "BlockLune",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "chai": "^5.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-hexo": "^5.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "hexo": "^7.1.1"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "test/**/*.test.ts"
    ],
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  }
}
