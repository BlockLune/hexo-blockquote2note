  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "c8": "^9.1.0",
    "chai": "^5.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "eslint-config-hexo": "^5.0.0",
    "mocha": "^10.2.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "hexo": "^7.1.1"
